<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image_picker_image_size">
    <ImageView
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/selectView"
        android:layout_width="@dimen/image_picker_check_box_size"
        android:layout_height="@dimen/image_picker_check_box_size"
        android:layout_alignParentRight="true"
        android:src="@drawable/image_picker_unselected"/>
</RelativeLayout>